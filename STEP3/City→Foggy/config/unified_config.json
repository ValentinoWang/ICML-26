{
  "experiment_name": "CityFog_YOLO_Bias_Finetune",
  "description": "Cityscapes → FoggyCityscapes YOLO + L_bias 偏置控制实验配置",

  "experiment": {
    "seeds": [1088, 2195, 4960],
    "device": "0",
    "scenarios_to_run": ["few-shot", "small", "medium", "high"]
  },

  "data": {
    "scenarios": {
      "few-shot": {
        "config": "configs/Foggy-tgt-few-shot.yaml",
        "description": "Foggy few-shot (≈1% train) 场景"
      },
      "small": {
        "config": "configs/Foggy-tgt-small.yaml",
        "description": "Foggy small (≈5% train) 场景"
      },
      "medium": {
        "config": "configs/Foggy-tgt-medium.yaml",
        "description": "Foggy medium (≈20% train) 场景"
      },
      "high": {
        "config": "configs/Foggy-tgt-high.yaml",
        "description": "Foggy high (≈100% train) 场景"
      }
    }
  },

  "training": {
    "comment": "对齐 Pretrain-Finetune/City→Foggy finetune_on_foggy_scenario 的关键超参数，便于与 baseline 公平对比",
    "epochs": 5000,
    "batch_size": 64,
    "workers": 8,
    "patience": 20,
    "lr": 0.0001,
    "optimizer": "AdamW",
    "momentum": 0.937,
    "weight_decay": 0.0005,
    "cache": false,
    "amp": true,
    "verbose": true,
    "timeout_seconds": 0,
    "close_mosaic": 10,
    "mixup": 0.0,
    "copy_paste": 0.0,
    "imgsz": 640,
    "save": true,
    "save_period": -1,
    "pretrained": true,
    "single_cls": false,
    "rect": false,
    "cos_lr": false,
    "resume": false,
    "fraction": 1.0,
    "profile": false,
    "freeze": 10,
    "multi_scale": false,
    "dropout": 0.0,
    "val": true,
    "split": "val",
    "plots": true,
    "lrf": 0.01,
    "warmup_epochs": 3.0,
    "warmup_momentum": 0.8,
    "warmup_bias_lr": 0.1,
    "box": 7.5,
    "cls": 0.5,
    "dfl": 1.5,
    "hsv_h": 0.015,
    "hsv_s": 0.7,
    "hsv_v": 0.4,
    "degrees": 0.0,
    "translate": 0.1,
    "scale": 0.5,
    "shear": 0.0,
    "perspective": 0.0,
    "flipud": 0.0,
    "fliplr": 0.5,
    "mosaic": 1.0,
    "auto_augment": "randaugment",
    "erasing": 0.4,
    "deterministic": true
  }
}
